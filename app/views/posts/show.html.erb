<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


	<h2>Replies</h2>
	<% @post.replies.each do |reply| %>
	  <p>
	    <strong>User:</strong>
	    <%= reply.reply_user %>
	  </p>


	  <p>
	    <strong>Reply:</strong>
	    <%= reply.body %>
	  </p>


	  <p>
	    <%= link_to 'Destroy Reply', [reply.post, reply],
	               method: :delete,
	               data: { confirm: 'Are you sure?' } %>
	  </p>
	<% end %>




	<h2>Add a Reply:</h2>
	<%= form_for([@post, @post.replies.build]) do |f| %>
	  <p>
	    <%= f.label :reply_user %><br>
	    <%= f.text_field :reply_user %>
	  </p>
	  <p>
	    <%= f.label :body %><br>
	    <%= f.text_area :body %>
	  </p>
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
